@using EntityLayer.Concrete;
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary"></h3>
        <a href="/Customer/AddCustomer" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Yeni Müşteri Ekle
        </a>
    </div>

    <div class="card-body p-4">
        <table class="table table-hover table-striped align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Müşteri Adı</th>
                    <th>Müşteri Şehri</th>
                    <th>Müşteri Mesleği</th>
                    <th>Müşteri Sil</th>
                    <th>Müşteri Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.City</td>
                        <td>@item.Job.Name</td>
                        
                        <td>
                            <a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                        <td>
                            <a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>

