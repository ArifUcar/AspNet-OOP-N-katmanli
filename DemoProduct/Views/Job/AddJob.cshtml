@model EntityLayer.Concrete.Job
@{
    ViewData["Title"] = "AddJob";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-gradient-primary text-white text-center py-4">
            <h3 class="card-title mb-0" style="color:black">Yeni İş Ekle</h3>
        </div>
        <div class="card-body p-5">
            <form method="post">
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "İş Ekle" })
                    @Html.LabelFor(x => x.Name, "İş Ekle", new { @class = "form-label" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>
               

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-md btn-success shadow px-4 py-2">
                        <i class="fas fa-plus-circle"></i> Yeni İş Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


